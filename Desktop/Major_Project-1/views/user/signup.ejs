<% layout("../views/layouts/boilerplate.ejs") %>
<body>
   <div class="row mt-3">
   <h1 class="col-6 offset-3" style="margin-bottom: 15px;">
    SignUp in Wanderlust Now!
   </h1>
   <div class="col-6 offset-3">
    <form method="POST" action="/signup" novalidate class="needs-validation">
        <div class="mb-3">
        <label for="email" class="form-lable">Email</label>
            <input type="text" name="email" id="email" class="form-control" required>
        </div>

        <div class="mb-3">
        <label for="username" class="form-lable">Username</label>
            <input type="text" name="username" class="form-control" required>
        </div>

        <div class="mb-3">
        <label for="password" class="form-lable">Password</label>
            <input type="password" name="password" class="form-control" required>
        </div>
        <button class="addbtn" style="font-size: 20px;">SignUp</button>
    </form>
   </div>
   </div>
</body>