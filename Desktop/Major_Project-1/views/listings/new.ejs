<% layout("../views/layouts/boilerplate.ejs") %>

<body>
<div class="row">
<div class="col-8 offset-2">
<h1>Create new Listing</h1>

    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
        <label for="title" class="form-lable">Title</label>
            <input type="text" name="title"  class="form-control" required>
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Please enter Title</div>
        </div>
       
       
        <div class="mb-3">
        <label for="description" class="form-lable">Description</label>
            <textarea type="text" name="description" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter Description</div>  
            <div class="valid-feedback">Description looks good!</div>
        </div>
       

        <div class="mb-3">
        <label for="image" class="form-lable">Image</label>
            <input type="text" name="image" class="form-control" required >
            <div class="invalid-feedback">Please enter valid link</div>
            <div class="valid-feedback">Image looks beautiful!</div>
        </div>
       
        <div class="row">
        <div class="col-md-4">
        <div class="mb-3">
        <label for="price" class="form-lable">Price</label>
            <input type="number" name="price" class="form-control" required>
            <div class="invalid-feedback">Please enter Price!</div>  
        </div>
        </div>
        <div class="col-md-8">
        <div class="mb-3">
        <label for="location" class="form-lable">Location</label>
            <input type="text" name="location" class="form-control" required>
            <div class="invalid-feedback">Please enter location!</div> 
        </div>
        </div>
        </div>

        <div class="mb-3">
        <label for="country" class="form-lable">Country</label>
            <input type="text" name="country" class="form-control" required >
            <div class="invalid-feedback">Please enter Country!</div>       
        </div>

        <button class="addbtn">Add Now</button>
    </form>
</div>
</div>
</body>
