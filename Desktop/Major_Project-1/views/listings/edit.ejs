<% layout("../views/layouts/boilerplate.ejs") %>
<body>
<div class="row">
<div class="col-8 offset-2">
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
        <input type="text" name="title" placeholder="title" class="form-control">
        <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
        <textarea type="text" name="description" placeholder="description" class="form-control"></textarea>
        <div class="valid-feedback">Description looks good!</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-lable">Image</label>
        <input type="text" name="image" placeholder="image" class="form-control">
        </div>

        <div class="row">
        <div class="col-md-4">
        <div class="mb-3">
            <label for="price" class="form-lable">Price</label>
        <input type="number" name="price" placeholder="price" class="form-control">
        </div>
        </div>
        <div class="col-md-8">
        <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
        <input type="text" name="location" placeholder="location" class="form-control">
        </div>
        </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-lable">Country</label>
        <input type="text" name="country" placeholder="country" class="form-control">
        </div>
        <button class="addbtn">Edit Now</button>
    </form>
</div>
</div>
</body>